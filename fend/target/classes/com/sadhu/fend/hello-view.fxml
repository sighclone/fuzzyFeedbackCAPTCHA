<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.sadhu.fend.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <ImageView fx:id="captchaImg">
        <Image url="@../just_captchas/captcha0.png"  />
    </ImageView>
    <Label fx:id="welcomeText">Give the value for the "ans" parameter:</Label>
    <TextField fx:id="ans">Solution to the CAPTCHA...</TextField>
    <Label fx:id="timeText">Give the value for the "time_taken" parameter:</Label>
    <TextField fx:id="time_taken">Time in seconds (number)...</TextField>
    <Button text="Submit" onAction="#onHelloButtonClick"/>
</VBox>
